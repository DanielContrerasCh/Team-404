<%- include('includes/head.ejs', {permisos: permisos, dataPermisos:dataPermisos}) %>
<%- include('includes/header.ejs') %>

            <div class="col-md-8 m-auto mt-5">
                <!-- Titulo de la pagina -->
                <h1 class="mx-2 mt-2 mb-5">Roles:</h1> 
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    
                    <div class="col text-center">
                        <!-- mx-auto centra la imagen cuando se colapsa por tamaÃ±o -->
                        <div class="card h-100 mb-4 mx-auto" style="width: 17em;">
                            <img src="/img/admin.png" class="card-img-top" alt="imagen de rol" style="height: 15em; width: 17em;">
                            <h2 class="mx-2 mt-2">Administrador</h2> 
                            <!-- Dropdown de los permisos -->
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Permisos Administrador
                                </button>
                                <!-- Lista del contenido de nuestro dropdown -->
                                <ul class="dropdown-menu mx-auto">
                                    <div class="card-body bg-light">
                                        <% for(permiso of dataPermisos){ %>
                                            <!-- <% console.log(permiso) %> -->

                                            <!-- El 1 es el id del rol para el que muestra los permisos -->
                                            <% if (permiso.idrol == 1) { %>
                                                <div class="row"><%= permiso.idpermiso %>. <%= permiso.accion %>:</div>
                                                <div class="row">-<%= permiso.descripcion %></div>
                                            <% } %>   
                                        <% } %>
                                    </div>
                                </ul>
                            </div>
                            <!-- fin del dropdown -->
                        </div>
                    </div>




                    <div class="col text-center">
                        <div class="card h-100 mb-4 mx-auto" style="width: 17em;">
                            <img src="/img/crm.png" class="card-img-top" alt="imagen de rol" style="height: 15em; width: 17em;">

                            <h2 class="mx-2 mt-2">CRM</h2> 
                            
                            <!-- Dropdown de los permisos -->
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Permisos CRM
                                </button>
                                <!-- Lista del contenido de nuestro dropdown -->
                                <ul class="dropdown-menu mx-auto">
                                    <div class="card-body bg-light">
                                        <% for(permiso of dataPermisos){ %>
                                            <!-- <% console.log(permiso) %> -->
                                            <!-- El 2 es el id del rol para el que muestra los permisos -->
                                            <% if (permiso.idrol == 2) { %>
                                                <div class="row"><%= permiso.idpermiso %>. <%= permiso.accion %>:</div>
                                                <div class="row">-<%= permiso.descripcion %></div>
                                            <% } %>   
                                        <% } %>
                                    </div>
                                </ul>
                            </div>
                            <!-- fin del dropdown -->
                            
                        </div>
                    </div>



                    <div class="col text-center">
                        <div class="card h-100 mb-4 mx-auto" style="width: 17em;">
                            <img src="/img/empleado.png" class="card-img-top" alt="imagen de rol" style="height: 15em; width: 17em;">

                            <h2 class="mx-2 mt-2">Analista</h2> 

                            <!-- Dropdown de los permisos -->
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Permisos Analista
                                </button>
                                <!-- Lista del contenido de nuestro dropdown -->
                                <ul class="dropdown-menu mx-auto">
                                    <div class="card-body bg-light">
                                        <% for(permiso of dataPermisos){ %>
                                            <!-- <% console.log(permiso) %> -->
                                            <!-- El 3 es el id del rol para el que muestra los permisos -->
                                            <% if (permiso.idrol == 3) { %>
                                                <div class="row"><%= permiso.idpermiso %>. <%= permiso.accion %>:</div>
                                                <div class="row">-<%= permiso.descripcion %></div>
                                            <% } %>   
                                        <% } %>
                                    </div>
                                </ul>
                            </div>
                            <!-- fin del dropdown -->
                            

                        </div>
                        
                        <div class="d-flex justify-content-end">


                            <div class="col-auto mx-2">
                            <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal1">
                              Asignar nuevo permiso a rol
                            </button>
                            <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel1" aria-hidden="true">
                              <div class="modal-dialog">
                                <div class="modal-content">
                                  <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Asignar nuevo permiso a rol</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                  </div>
                                    <div class="modal-body">
                                    <form class="login-form rounded-5" action="/permisos/asignar" method="POST">
                                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                      
                                      <label class="form-text text-center " for="rol">Selecciona el rol:</label>
                                      <select class="form-select" aria-label="Default select example" name="rol" id="rol">
                                        <option value="1">Administrador</option>
                                        <option value="2">CRM</option>
                                        <option value="3">Analista</option>
                                      </select>
                                      
                                      <label class="form-text text-center " for="nombre">Escribe el Id del permiso a asignar</label>
                                      <input class="form-control" type="text" id="idpermiso" name="idpermiso" required>
                                                                
                                      
                                    </div>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                    <button type="submit" class="btn btn-primary">Asignar permiso a rol</button> 
                                  </form>
                                  </div>
                                </div>
                              </div>
                            </div>
                            </div>


                            <div class="col-auto mx-2">
                            <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal2">
                                Eliminar permiso de rol
                              </button>
                              <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel2" aria-hidden="true">
                                <div class="modal-dialog">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                      <h1 class="modal-title fs-5" id="exampleModalLabel">Eliminar permiso del rol</h1>
                                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                      <div class="modal-body">
                                      <form class="login-form rounded-5" action="/permisos/desasignar" method="POST">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        
                                        <label class="form-text text-center " for="rol">Selecciona el rol:</label>
                                        <select class="form-select" aria-label="Default select example" name="rol" id="rol">
                                          <option value="1">Administrador</option>
                                          <option value="2">CRM</option>
                                          <option value="3">Analista</option>
                                        </select>
                                        
                                        <label class="form-text text-center " for="nombre">Escribe el Id del permiso a eliminar</label>
                                        <input class="form-control" type="text" id="idpermiso" name="idpermiso" required>
                                                                  
                                        
                                      </div>
                                    <div class="modal-footer">
                                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                      <button type="submit" class="btn btn-primary">Eliminar permiso</button> 
                                    </form>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>

                            
                        </div>

                            
                    </div>

                </div>
            </div>  
        </div>
    </div>


    <%- include('includes/sidebar.ejs') %>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>