<%- include('includes/head.ejs', {permisos: permisos}) %>
<%- include('includes/header.ejs') %>

<div class="container-fluid main-content">
  <div class="row">
    <div class="col-md-7"> 
      <div class="container mt-5">
        <div class="row align-items-center">
          <div class="col-md-auto align-self-start">
            <!-- Título dinámico basado en marca y categoría -->
            <h2 class="mb-0"><%= marca.toUpperCase() %> - <%= categoria.toUpperCase() %></h2>
          </div>
          <br>
          <br>
          <!-- Inicio del formulario -->
          <!-- Mostrar preguntas existentes -->
          <% if (preguntas.length > 0) { %>
            <div class="preguntas-container">
                <h2>Preguntas existentes</h2>
                <ul>
                    <% preguntas.forEach(pregunta => { %>
                        <li>
                            ID: <%= pregunta.IDPreguntas %><br>
                            Pregunta: <%= pregunta.Pregunta %><br>
                            Tipo de pregunta: <%= pregunta.TipoPregunta %><br>
                            Estado: <%= pregunta.EstadoObligatorio ? 'Obligatoria' : 'No Obligatoria' %>
                        </li>
                        <br>
                    <% }); %>
                </ul>
            </div>
          <% } else { %>
            <p>No hay preguntas registradas.</p>
          <% } %>
          <!-- Fin del formulario -->
          <!-- Botones de encuesta-->
          <div class="mt-4 container-fluid d-flex justify-content-between align-items-center">
            <div>
              <div class="d-flex">
                <!-- Botón para editar pregunta -->
                <a href="#" class="btn btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#editarModal">Editar pregunta <i class="bi bi-pencil"></i></a>
          
                <!-- Botón para agregar pregunta -->
                <a href="#" class="btn btn-outline-success me-2" data-bs-toggle="modal" data-bs-target="#agregarModal">Agregar pregunta <i class="bi bi-plus"></i></a>
          
                <!-- Botón para editar opciones de pregunta -->
                <a href="#" class="btn btn-outline-secondary me-2" data-bs-toggle="modal" data-bs-target="#editaropcionesModal">Editar opciones de pregunta <i class="bi bi-gear"></i></a>
          
                <!-- Botón para eliminar pregunta -->
                <a href="#" class="btn btn-outline-warning me-2" data-bs-toggle="modal" data-bs-target="#eliminarPreguntaModal">Eliminar pregunta <i class="bi bi-x-lg"></i></a>
              </div>
            </div>
            <div>
              <!-- Botón para eliminar encuesta -->
              <a href="#" class="btn btn-outline-danger ms-2" data-bs-toggle="modal" data-bs-target="#eliminarModal">Eliminar encuesta <i class="bi bi-trash-fill"></i></a>
            </div>
          </div>          
          <!-- Botón para regresar a las encuestas de la marca y Previsualizar encuesta -->
          <div class="mt-4 container-fluid">
            <div class="d-flex justify-content-between align-items-center">
              <!-- Botón Regresar -->
              <div class="d-flex">
                <a href="/encuestas/<%= marca %>" class="btn btn-outline-dark me-2">Regresar a <%= marca %> <i class="bi bi-arrow-90deg-left"></i></a>
              </div>
              
              <!-- Botón Previsualizar Encuesta -->
              <div>
                <!-- Asegúrate de definir la ruta correcta para la previsualización de la encuesta -->
                <a href="/encuestas/previsualizar/<%= marca %>/<%= categoria %>" class="btn btn-outline-dark me-2">Previsualizar correo <i class="bi bi-eye"></i></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- Modales -->
<!-- Editar pregunta -->
<div class="modal fade" id="editarModal" tabindex="-1" aria-labelledby="editarModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Editar pregunta</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Forma para recibir info de la pregunta -->
        <form class="brand-form card text-center p-4" action="/encuestas/editar_pregunta" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <!-- Preguntar por el ID      -->
              <label class="mt-4 mb-2 text-center" for="brandname">ID de la pregunta a cambiar</label>
              <input class="form-control" type="text" id="idpreguntacambiar" name="idpreguntacambiar" required>
              <!-- Preguntar por el estado -->
              <label class="form-text text-center " for="Obligatoria">¿Obligatoria?</label>
              <select class="form-select" aria-label="Default select example" name="obligatorio" id="obligatorio">
                  <option value="1">Si</option> <!-- Cambiado a 1 para representar "Si" -->
                  <option value="0">No</option> <!-- Cambiado a 0 para representar "No" -->
              </select>
              <!-- Preguntar por la pregunta -->
              <label class="form-text text-center " for="Pregunta">Pregunta</label>
              <input class="form-control" type="text" id="pregunta" name="pregunta" required>
              <!-- Preguntar por el tipo de pregunta  -->
              <label class="form-text text-center " for="TipoPregunta">Selecciona el tipo de pregunta:</label>
              <select class="form-select" aria-label="Default select example" name="tipo_pregunta" id="tipo_pregunta">
                  <option value="Checkbox">Checkbox</option>
                  <option value="OpcionMultiple">Opción Múltiple</option>
                  <option value="Abierta">Abierta</option>
                  <option value="Rango">Rango</option>
              </select> 
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            <button type="submit" class="btn btn-primary">Guardar cambios</button> 
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
  
<!-- Editar opciones de pregunta -->
<div class="modal fade" id="editaropcionesModal" tabindex="-1" aria-labelledby="editaropcionesModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Editar opcion de pregunta</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Forma para recibir info de la pregunta -->
        <form class="brand-form card text-center p-4" action="/encuestas/editar_pregunta_opcion" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <!-- Preguntar por el ID  -->
              <label class="mt-4 mb-2 text-center" for="brandname">ID de la opcion a cambiar</label>
              <input class="form-control" type="text" id="idopcionpreguntacambiar" name="idopcionpreguntacambiar" required>
              <label class="form-text text-center" for="Opciones">Nueva opcion:</label>
              <input type="text" id="opciones" name="Opciones" class="form-control">
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            <button type="submit" class="btn btn-primary">Guardar cambios</button> 
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
  
<!-- Agregar pregunta -->
<div class="modal fade" id="agregarModal" tabindex="-1" aria-labelledby="agregarModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Agregar pregunta</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form class="login-form rounded-5" action="/encuestas/<%= marca.toLowerCase() %>/<%= categoria.toLowerCase() %>" method="POST" id="agregarpregunta">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          
          <label class="form-text text-center" for="Obligatoria">¿Obligatoria?</label>
          <select class="form-select" aria-label="Default select example" name="EstadoObligatorio" id="obligatorio">
              <option value="1">Si</option>
              <option value="0">No</option>
          </select>
          
          <label class="form-text text-center" for="Pregunta">Pregunta</label>
          <input class="form-control" type="text" id="pregunta" name="Pregunta" required>
      
          <label class="form-text text-center" for="TipoPregunta">Selecciona el tipo de pregunta:</label>
          <select class="form-select" aria-label="Default select example" name="TipoPregunta" id="tipo_pregunta">
              <option value="Checkbox">Checkbox</option>
              <option value="OpcionMultiple">Opción Múltiple</option>
              <option value="Abierta">Abierta</option>
              <option value="Archivo">Archivo</option>
          </select>
          <label class="form-text text-center" for="Opciones">Opciones (separadas por comas):</label>
          <input type="text" id="opciones" name="Opciones" class="form-control">
       
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            <button type="submit" form="agregarpregunta" class="btn btn-primary">Registrar pregunta</button> 
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
  
<!-- Eliminar encuesta -->
<div class="modal fade" id="eliminarModal" tabindex="-1" aria-labelledby="eliminarModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="eliminarModalLabel">Eliminar Encuesta</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ¿Seguro que quieres eliminar la encuesta?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <form action="/encuestas/delete_encuesta/<%= marca %>/<%= categoria %>" method="POST" id="eliminarencuesta">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button type="submit" form="eliminarencuesta" class="btn btn-danger">Sí</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Eliminar pregunta -->
<div class="modal fade" id="eliminarPreguntaModal" tabindex="-1" aria-labelledby="eliminarPreguntaModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Eliminar pregunta</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Forma para recibir info de la pregunta -->
        <form class="brand-form card text-center p-4" action="/encuestas/editar_pregunta_opcion" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <!-- Preguntar por el ID  -->
              <label class="mt-4 mb-2 text-center" for="brandname">ID de la pregunta a eliminar</label>
              <input class="form-control" type="text" id="idpreguntaeliminar" name="idpreguntaeliminar" required>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            <button type="submit" class="btn btn-primary">Eliminar pregunta</button> 
          </div>
        </form>
      </div>
    </div>
  </div>
</div>



