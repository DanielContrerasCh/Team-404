<%- include('includes/head.ejs', {permisos: permisos,  username:username}) %>
<%- include('includes/header.ejs') %>

        <div class="col mt-5">
            <div class="container">
                <div class="row justify-content-center align-items-center">
                    <div class="col-md-4">
                        <div id="account-form" class="card text-center p-4">
                            <div class="btn-group mb-3">
                                <button type="button" class="btn position-relative">
                                    <img src="/img/account.png" alt="Account" class="img-fluid">
                                </button>
                            </div>
                            <p class="card-text fs-4"> <%= username %> </p>
                            <button type="button" class="btn btn-primary mb-3" onclick="showEdit()">Cambiar contraseña</button>
                            <script>
                                function showEdit() {
                                    document.getElementById('edit').style.display = "";
                                    document.getElementById('save').style.display = "";
                                    }
                            </script>
                            <form action="/cuenta/edit"  method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="input-group mb-3" id="edit" style="display: none;">
                                <input type="password" class="form-control" id="password" name="password" aria-label="password" aria-describedby="button-addon1" required>
                                <button class="btn btn-outline-secondary btn-lg"  type="button" id="button-addon1" onclick="seePassword()">
                                    <i class="fa-solid fa-eye"></i>
                                    <script>function seePassword() {
                                        var x = document.getElementById("password");
                                        if (x.type === "password") {
                                          x.type = "text";
                                        } else {
                                          x.type = "password";
                                        }
                                      }
                            </script>
                            </button>
                            </div>
                            <button type="submit" class="btn btn-success" id="save" style="display: none;">Guardar contraseña</button>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


