<%- include('includes/head.ejs', {permisos: permisos}) %>
<%- include('includes/header.ejs') %>

<div class="container-fluid main-content">
    <div class="row justify-content-center">
      <div class="col-md-9"> 
        <div class="container mt-5">
          <div class="row align-items-center">
            <div class="col-md-auto align-self-start">
              <% preguntas.forEach(function(pregunta) { %>
                <div class="mb-3">
                  <label class="form-label"><%= pregunta.Pregunta %></label>
                  <% if(pregunta.TipoPregunta === 'Abierta') { %>
                    <input type="text" class="form-control" disabled>
                  <% } else if(pregunta.TipoPregunta === 'Checkbox') { %>
                    <% pregunta.opciones.forEach(function(opcion) { %>
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck<%= opcion.IDopcion %>" disabled>
                        <label class="form-check-label" for="defaultCheck<%= opcion.IDopcion %>">
                          <%= opcion.TextoOpcion %>
                        </label>
                      </div>
                    <% }) %>
                  <% } else if(pregunta.TipoPregunta === 'OpcionMultiple') { %>
                    <% pregunta.opciones.forEach(function(opcion) { %>
                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="<%= pregunta.IDPreguntas %>" id="opcion<%= opcion.IDopcion %>" value="<%= opcion.IDopcion %>" disabled>
                        <label class="form-check-label" for="opcion<%= opcion.IDopcion %>">
                          <%= opcion.TextoOpcion %>
                        </label>
                      </div>
                    <% }) %>
                  <% } else if(pregunta.TipoPregunta === 'Archivo') { %>
                    <div class="mb-3">
                      <input class="form-control" type="file" id="formFileDisabled" disabled>
                    </div>
                  <% } %>
                </div>
              <% }) %>
              <a href="/encuestas/<%= marca %>/<%= categoria %>" class="btn btn-outline-dark me-2">Regresar a <%= categoria %> <i class="bi bi-arrow-90deg-left"></i></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- Barra lateral -->
