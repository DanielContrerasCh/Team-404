<head>
    <%- include('includes/head.ejs', {permisos: permisos}) %>
</head>
<body>
    <%- include('includes/header.ejs') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-9 m-auto">
                <h2 class="mb-4">Catálogo</h2>
                <div class="container mt-4 mb-4">
                    <!-- Formulario para buscar por brand -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <form action="/catalogo/product/itemcode" method="POST" id="itemCodeForm">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="itemCode" name="itemCode" placeholder="Enter item code">
                                    <button class="btn btn-secondary" type="submit">Buscar por código</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-6">
                            <form action="/catalogo/product/brand" method="POST" id="brandForm">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="input-group">
                                    <select class="form-select" name="brand" id="brand" aria-label="Select brand">
                                        <% brands.forEach(brand => { %>
                                            <option value="<%= brand.NombreMarca %>"><%= brand.NombreMarca %></option>
                                        <% }); %>
                                    </select>
                                    <button class="btn btn-secondary" type="submit">Buscar por marca</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                

                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Item Code</th>
                            <th>Nombre de la Marca</th>
                            <th>Título</th>
                            <th>Web Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let product of products) { %>
                            <tr>
                                <td><%= product.ItemCode %></td>
                                <td><%= product.NombreMarca %></td>
                                <td><%= product.Title %></td>
                                <td><%= product.WebName %></td>
                                <td><i class="fa-solid fa-caret-down"></i></td>
                            </tr>
                            <tr id="row_<%= product.ItemCode %>" class="collapse">
                                <td colspan="5">
                                    <div style="display: flex; align-items: center;">
                                        <img src="<%= product.WebsiteIMG %>" alt="" class="img-fluid mb-2">
                                        <div>
                                            <p><b>Descripción</b></p>
                                            <p><%= product.Description %></p>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('includes/sidebar.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/c5614e6e6c.js" crossorigin="anonymous"></script>

    <script>
        function submitForm() {
            document.getElementById("filterForm").submit();
        }
        document.querySelectorAll('tbody tr:not(.collapse)').forEach(function(tr) {
            tr.addEventListener('click', function() {
                const dropdownRow = document.getElementById('row_' + this.firstElementChild.textContent);
                dropdownRow.classList.toggle('collapse');
            });
        });

        document.getElementById('itemCode').addEventListener('input', function() {
            var itemCode = this.value;
            var csrfToken = document.querySelector('input[name="_csrf"]').value;

            // Solo realiza la búsqueda si itemCode no está vacío
            if (itemCode) {
                fetch('/catalogo/product/itemcode', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'csrf-token': csrfToken
                    },
                    body: JSON.stringify({ itemCode: itemCode })
                })
                .then(response => response.json())
                .then(data => {
                    // Actualiza la página con los datos recibidos
                    // Esto dependerá de cómo quieras mostrar los resultados en tu página
                })
                .catch(error => console.error('Error:', error));
            }
        });
    </script>
</body>
</html>