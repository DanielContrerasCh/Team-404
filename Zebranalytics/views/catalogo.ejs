<head>
    <%- include('includes/head.ejs', {permisos: permisos, totalPages:totalPages, currentPage:currentPage, startIndex:startIndex, endIndex:endIndex} ) %>
    <script src="https://kit.fontawesome.com/c5614e6e6c.js" crossorigin="anonymous"></script>
</head>
<style>
    .table-fixed thead {
        position: sticky;
        top: 0;
        background-color: #343a40;
        color: white;
    }
</style>

<body>
    <%- include('includes/header.ejs') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-9 m-auto">
                <h2 class="mb-4">Catálogo</h2>
                <div class="container mt-4 mb-4">
                    <!-- Formulario para buscar por brand -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <input id="buscar" class="input is-info" type="text" placeholder="Buscar..."/><br><br>
                            <form action="/catalogo/brand" method="POST" id="brandForm">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="input-group">
                                    <select class="form-select" name="brand" id="brand" aria-label="Select brand">
                                        <% brands.forEach(brand => { %>
                                            <option value="<%= brand.NombreMarca %>"><%= brand.NombreMarca %></option>
                                        <% }); %>
                                    </select>
                                    <button class="btn btn-secondary" type="submit">Buscar por marca</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                

                <table class="table table-striped table-bordered table-fixed">
                    <tbody>
                        <div id="respuesta_ajax">
                        </div>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('includes/sidebar.ejs') %>

    <%  if(totalPages != 1) { %>
        <!--
        <nav class="col" aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item">
              <a class="page-link" href="/catalogo?page=1" aria-label="First">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
            <% const startPage = Math.max(1, currentPage - 1); %>
            <% const endPage = Math.min(startPage + 2, totalPages); %>
            <% for (let i = startPage; i <= endPage; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="/catalogo?page=<%= i %>"><%= i %></a>
              </li>
            <% } %>
            <li class="page-item">
              <a class="page-link" href="/catalogo?page=<%= totalPages %>" aria-label="Last">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          </ul>
        </nav>
        -->
        <% } %>
        <%  if(totalPages == 1) { %>
        <div class="col"></div>
        <% } %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/c5614e6e6c.js" crossorigin="anonymous"></script>

    <script>
        function submitForm() {
            document.getElementById("filterForm").submit();
        }
        document.querySelectorAll('tbody tr:not(.collapse)').forEach(function(tr) {
            tr.addEventListener('click', function() {
                const dropdownRow = document.getElementById('row_' + this.firstElementChild.textContent);
                dropdownRow.classList.toggle('collapse');
            });
        });
    </script>
    
    <script>
document.addEventListener('DOMContentLoaded', (event) => {
    accionAsincrona();
});

const accionAsincrona = () => {
    console.log('Buscando...');
    const valor_busqueda = document.getElementById('buscar').value;
    //función que manda la petición asíncrona
    fetch('catalogo/buscar/' + valor_busqueda, {
        method: 'GET',
        headers: {
            'Content-Type': 'application/json',
        }
    }).then((result) => {
        console.log(result);
        return result.json();
    }).then((data) => {
    console.log(data);
    let html = '';
    let htmlHead = `<table class="table table-striped table-bordered table-fixed">
                    <thead class="table-dark">
                        <tr>
                            <th>Item Code</th>
                            <th>Nombre de la Marca</th>
                            <th>Título</th>
                            <th>Web Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>`;
            html += htmlHead;
    if (Array.isArray(data.products)) { // Check if data.products is an array
        data.products.forEach(product => {
            console.log(product);
            let htmlSegment = `
                <tr>
                    <td>${product.ItemCode}</td>
                    <td>${product.NombreMarca}</td>
                    <td>${product.Title}</td>
                    <td>${product.WebName}</td>
                    <td><i class="fa-solid fa-caret-down"></i></td>
                </tr>
                <tr id="row_${product.ItemCode}" class="collapse">
                    <td colspan="5">
                        <div style="display: flex; align-items: center;">
                            <img src="${product.WebsiteIMG}" alt="" class="img-fluid mb-2">
                            <div>
                                <p><b>Descripción</b></p>
                                <p>${product.Description}</p>
                            </div>
                        </div>
                    </td>
                </tr>
            `;
            html += htmlSegment;
        });
        html += `</tbody>`; // Append the closing tag after the loop
        document.getElementById('respuesta_ajax').innerHTML = html;
    }
    })
    .catch(err => {
        console.error('Error:', err);
    });
            };
    document.getElementById('buscar').onkeyup = accionAsincrona;
    console.log('fin');
    </script>
        
        
</body>
</html>