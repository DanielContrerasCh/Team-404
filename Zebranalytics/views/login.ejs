<%- include('includes/head.ejs') %>

<body>

<div class="login-container">
    <form class="login-form col-4" action="/user/login" method="POST">
        <h1 class="display-4 text-center">(Zebranalytics)</h1>

        <label class="form-text text-center" for="username">Correo</label>
        <input class="form-control" type="text" id="username" name="username" required>

        <label class="form-text text-center" for="password">Contraseña</label>
        <div class="input-group mb-3">
            <input type="password" class="form-control" aria-describedby="basic-addon2" required>
            <div class="input-group-append">
              <button class="btn btn-outline-secondary" type="button"><i class="fa-solid fa-eye"></i></button>
            </div>
        </div>

        <button id="loginButton" class="btn-lg btn-block" type="submit">Iniciar Sesión</button>
        
        <button id="loginButtonGoogle" class="btn-lg btn-block" type="submit">Iniciar Sesión con Google</button>
        
        <!-- Link to another page -->
        <p class="text-center mt-3"><a href="#">¿Olvidaste tu contraseña?</a></p>

    </form>
</div>

</body>
<script src="https://kit.fontawesome.com/c5614e6e6c.js" crossorigin="anonymous"></script>
</html>