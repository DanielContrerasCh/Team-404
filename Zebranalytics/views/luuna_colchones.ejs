<%- include('includes/head.ejs', {permisos: permisos}) %>
<%- include('includes/header.ejs') %>

<div class="container-fluid main-content">
  <div class="row">
    <div class="col-md-12">
      <div class="container mt-5">
        <div class="row align-items-center">
          <div class="col-md-auto align-self-start">
            <h2 class="mb-0"><%= marca %></h2>
            <br>
            <% if (categorias.length > 0) { %>
              <% categorias.forEach(categoria => { %>
                <div class="col-md-12 mb-3">
                  <a href="/encuestas/<%= marca.toLowerCase() %>/<%= categoria %>" class="btn btn-outline-primary">
                    <%= categoria %> <i class="bi bi-pencil-fill"></i>
                  </a>
                </div>
              <% }); %>
            <% } else { %>
              <p>Aún no hay categorías.</p>
            <% } %>
          </div>
        </div>
        <div class="row mt-4">
          <div class="col-5 d-flex justify-content-start">
            <a href="#" class="btn btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#editarcatModal">
              Renombrar categoría <i class="bi bi-pencil"></i>
            </a>
            <a href="#" class="btn btn-outline-success me-2" data-bs-toggle="modal" data-bs-target="#agregarcatModal">
              Agregar categoría <i class="bi bi-plus"></i>
            </a>
          </div>
          <div class="col-5 offset-2 d-flex justify-content-end">
            <a href="#" class="btn btn-outline-danger me-2" data-bs-toggle="modal" data-bs-target="#eliminarcatModal">
              Eliminar categoría <i class="bi bi-trash-fill"></i>
            </a>
          </div>
        </div>        
      </div>
    </div>
  </div>
</div>

<!-- Modales -->
<!-- Editar pregunta -->
<div class="modal fade" id="editarModal" tabindex="-1" aria-labelledby="editarModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Editar pregunta</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Forma para recibir info de la pregunta -->
        <form class="brand-form card text-center p-4" action="/encuestas/editar_pregunta" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <!-- Preguntar por el ID  -->
              <label class="mt-4 mb-2 text-center" for="brandname">ID de la pregunta a cambiar</label>
              <input class="form-control" type="text" id="idpreguntacambiar" name="idpreguntacambiar" required>
              <!-- Preguntar por el estado -->
              <label class="form-text text-center " for="Obligatoria">¿Obligatoria?</label>
              <select class="form-select" aria-label="Default select example" name="obligatorio" id="obligatorio">
                  <option value="1">Si</option> <!-- Cambiado a 1 para representar "Si" -->
                  <option value="0">No</option> <!-- Cambiado a 0 para representar "No" -->
              </select>
              <!-- Preguntar por la pregunta -->
              <label class="form-text text-center " for="Pregunta">Pregunta</label>
              <input class="form-control" type="text" id="pregunta" name="pregunta" required>
              <!-- Preguntar por el tipo de pregunta  -->
              <label class="form-text text-center " for="TipoPregunta">Selecciona el tipo de pregunta:</label>
              <select class="form-select" aria-label="Default select example" name="tipo_pregunta" id="tipo_pregunta">
                  <option value="Checkbox">Checkbox</option>
                  <option value="OpcionMultiple">Opción Múltiple</option>
                  <option value="Abierta">Abierta</option>
                  <option value="Rango">Rango</option>
              </select> 
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            <button type="submit" class="btn btn-primary">Guardar cambios</button> 
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Editar opciones de pregunta -->
<div class="modal fade" id="editaropcionesModal" tabindex="-1" aria-labelledby="editaropcionesModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Editar opcion de pregunta</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Forma para recibir info de la pregunta -->
        <form class="brand-form card text-center p-4" action="/encuestas/editar_pregunta_opcion" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <!-- Preguntar por el ID  -->
              <label class="mt-4 mb-2 text-center" for="brandname">ID de la opcion a cambiar</label>
              <input class="form-control" type="text" id="idopcionpreguntacambiar" name="idopcionpreguntacambiar" required>
              <label class="form-text text-center" for="Opciones">Nueva opcion:</label>
              <input type="text" id="opciones" name="Opciones" class="form-control">
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            <button type="submit" class="btn btn-primary">Guardar cambios</button> 
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Agregar pregunta -->
<div class="modal fade" id="agregarModal" tabindex="-1" aria-labelledby="agregarModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Agregar pregunta</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form class="login-form rounded-5" action="/encuestas/luuna_new_colchones" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          
          <label class="form-text text-center" for="Obligatoria">¿Obligatoria?</label>
          <select class="form-select" aria-label="Default select example" name="EstadoObligatorio" id="obligatorio">
              <option value="1">Si</option>
              <option value="0">No</option>
          </select>
          
          <label class="form-text text-center" for="Pregunta">Pregunta</label>
          <input class="form-control" type="text" id="pregunta" name="Pregunta" required>
      
          <label class="form-text text-center" for="TipoPregunta">Selecciona el tipo de pregunta:</label>
          <select class="form-select" aria-label="Default select example" name="TipoPregunta" id="tipo_pregunta">
              <option value="Checkbox">Checkbox</option>
              <option value="OpcionMultiple">Opción Múltiple</option>
              <option value="Abierta">Abierta</option>
              <option value="Archivo">Archivo</option>
          </select>

          <label class="form-text text-center" for="Opciones">Opciones (separadas por comas):</label>
          <input type="text" id="opciones" name="Opciones" class="form-control">
       
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            <button type="submit" class="btn btn-primary">Registrar pregunta</button> 
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Eliminar encuesta -->
<div class="modal fade" id="eliminarModal" tabindex="-1" aria-labelledby="eliminarModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="eliminarModalLabel">Eliminar Encuesta</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ¿Seguro que quieres eliminar la encuesta?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <!-- Modifica la acción del formulario para incluir los parámetros de marca y categoría -->
        <form action="/encuestas/delete_encuesta/<%= marca %>/<%= categoria %>" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button type="submit" class="btn btn-danger">Sí</button>
        </form>
      </div>
    </div>
  </div>
</div>


